<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo" xmlns:spectrumcore="clr-namespace:SpectrumCore;assembly=SpectrumCore"
        WindowStyle="None"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Background="#5a000000"
        Title="MainWindow" Height="450" Width="1300">
    <Grid>
        <Grid Margin="20" Background="{Binding BackGround}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <spectrumcore:WaterFallGraphics Grid.Column="0" x:Name="Grapicpannel"/>
        </Grid>
    </Grid>
</Window>